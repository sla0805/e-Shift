@model eShift.Models.TransportAssignment

@{
    ViewData["Title"] = "Add Transport Assignment";
}

<h2>Create Transport Assignment</h2>

<h4>Transport Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="JobId" class="control-label"></label>
                <select asp-for="JobId" class="form-control" asp-items="ViewBag.Jobs">
                    <option value="">-- Select Job --</option>
                </select>
                <span asp-validation-for="JobId" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="DriverId" class="control-label"></label>
                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.Drivers">
                    <option value="">-- Select Driver --</option>
                </select>
                <span asp-validation-for="DriverId" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="AssistantId" class="control-label"></label>
                <select asp-for="AssistantId" class="form-control" asp-items="ViewBag.Assistants">
                    <option value="">-- Select Assistant --</option>
                </select>
                <span asp-validation-for="AssistantId" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.Vehicles">
                    <option value="">-- Select Vehicle --</option>
                </select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}