@model eShift.Models.Assistant

@{
    ViewData["Title"] = "Delete Assistant";
}

<h2>Delete Assistant</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Assistant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Assistant ID</dt>
        <dd class="col-sm-10">@Model.AssistantId</dd>

        <dt class="col-sm-2">Assistant Name</dt>
        <dd class="col-sm-10">@Model.AssistantName</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.AssistantPhone</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AssistantId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>