@model eShift.Models.Job

@{
    ViewData["Title"] = "Jobs Info";
}

<h2>Job Details</h2>

<div>
    <h4>Job</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Job ID</dt>
        <dd class="col-sm-10">@Model.JobId</dd>

        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Model.Customer?.CustName</dd>

        <dt class="col-sm-2">Pickup Location</dt>
        <dd class="col-sm-10">@Model.PickupLocation</dd>

        <dt class="col-sm-2">Delivery Location</dt>
        <dd class="col-sm-10">@Model.DeliveryLocation</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Scheduled Date</dt>
        <dd class="col-sm-10">@Model.ScheduledDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Delivery Date</dt>
        <dd class="col-sm-10">@(Model.DeliveryDate.HasValue ? Model.DeliveryDate.Value.ToShortDateString() : "N/A")</dd>

        <dt class="col-sm-2">Job Status</dt>
        <dd class="col-sm-10">@Model.JobStatus</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.JobId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>