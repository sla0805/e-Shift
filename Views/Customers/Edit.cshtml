@model eShift.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<h2>Edit Customer</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
