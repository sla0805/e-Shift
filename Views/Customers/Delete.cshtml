@model eShift.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.CustName</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.CustAddress</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.CustPhone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.CustEmail</dd>

        <dt class="col-sm-2">Registration Date</dt>
        <dd class="col-sm-10">@Model.CustRegisterDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CustId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>