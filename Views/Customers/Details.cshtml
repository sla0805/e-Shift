@model eShift.Models.Customer

@{
    ViewData["Title"] = "Customer Info";
}

<h2>Customer Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.CustName</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.CustAddress</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.CustPhone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.CustEmail</dd>

        <dt class="col-sm-2">Registration Date</dt>
        <dd class="col-sm-10">@Model.CustRegisterDate.ToShortDateString()</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CustId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>